Given two integers n and r, find nCr. Since the answer may be very large, calculate the answer modulo 109+7.
 int nCr(int n, int r){
        // code here
        int mod=1e9+7;
  int i,j;
        vector<vector<int>>dp(n+1,vector<int>(r+1,0));
        for(i=0;i<=n;i++){
            dp[i][0]=1;
        }
        for(i=0;i<=n;i++){
            for(j=1;j<=min(i,r);j++){
                dp[i][j]=(dp[i-1][j]%mod + dp[i-1][j-1]%mod)%mod;
            }
        }
        return dp[n][r];
    }
